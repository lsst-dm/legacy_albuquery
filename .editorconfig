# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,scala,rs,xml}]
indent_size = 4
continuation_indent_size = 8

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
